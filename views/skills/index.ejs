<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Developer Skills</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body>
  <a href="/">Home</a> | <a href="/skills/new">Add Skills</a>
  <h1>Developer Skills List</h1>
  <ul>
    <% skills.forEach(function(s) { %>
      <li>
        <form action="/skills/<%= s.id %>?_method=DELETE"
          class="delete-form" method="POST">
          <button type="submit" id="delete">X</button>
        </form>
          <a href="/skills/<%= s.id %>"><%= s.skill %></a> - <%= s.learned ? 'Learned' : 'Not learned' %></li>
      <% }); %>
  </ul>
</body>
</html>